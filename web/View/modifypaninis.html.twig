{% extends 'layout.html.twig' %}
{% block main_body %}
<div class="containeradminadd">
    <h1 class="passwordtitle">Modifier le produit</h1>

    <form action="" method="post"  class="adminaddform">
        <fieldset>

            <label for="Name">Nom</label>
            <input type="text" id="name" name="Name" data-name="nom" data-required value="{{paninis.Name }}">
            <label for="Description">Description</label>
            <input type="text" id="Description" name="Description" data-name="description" value="{{paninis.Description }}">
            <label for="">Prix</label>
            <input type="text" id="Price" name="SalePrice" data-name="prix" value="{{paninis.SalePrice }}">
                <input type="hidden" name="PaninisId" value="{{ paninis.PaninisId }}" />
            <button type="submit" id="button">Valider</button>
        </fieldset>
    </form>
    <h3><a href="{{ path('menu') }}">Visualiser les changements</a></h3>
</div>

{%  endblock %}