            <fieldset>
                <label for="Name">Id</label>
                <input type="text" id="name" name="DrinksId" data-name="nom" data-required>
                <button type="submit" id="button">Valider</button>
                </fieldset>
    </form>
        <table>
            <thead>
            <tr>
                <th>Drinks</th>
                <th>Id</th>
            </tr>
            </thead>
            {% for drink in drinks %}
