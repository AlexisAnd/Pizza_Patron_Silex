<div id="panier">
<h3>Votre panier</h3>
    {% if ordertotal > 0 %}
    {% for order in orderline %}
    <ul class="list">
        <li class="payment"><i class="fa fa-minus-circle"  data-quantity="1" data-number="{{ order.OrderLineId }}"></i>{{ order.Quantity }}x</li>
        <li class="payment">{{ order.Name }}</li>
        <li class="payment">{{ (order.SalePrice * order.Quantity)|number_format(2, '.', ',') }} €</li>
    </ul>
    {% endfor %}
    {% else %}
    <p>Votre panier est vide.</p>
    {%  endif %}
    {% if ordertotal == true %}
    <ul class="fee">
        <li>Frais de livraison</li>
        <li>2.50€</li>
    </ul>
    <ul class="sum">
        <li>Montant Total</li>
        <li>{{ (2.50 + ordertotal.Total)|number_format(2, '.', ',')}}€</li>
    </ul>
    {% endif %}
<div id="delete" data-path="{{ path('delete') }}"></div>
    {% if ordertotal == true %}
<div class="pay">
<a href="{{ path('payment') }}">Finaliser la commande</a>
</div>
    {% endif %}
</div>