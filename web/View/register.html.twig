{% extends 'layout.html.twig' %}

{% block main_body %}
<div class="containerregister">
<h1>Creez votre compte:</h1>

    <div class="connectsucces">{% for notice in app.session.getFlashBag.get('notice') %}
      <p>{{ notice }}</p>
    {% endfor %}
    </div>
<h4>* Les champs sont requis</h4>
 <div id="issues">{{ loginform.errormessage }}</div>
<form action="" method="post" id="registerform">
       <div>
        <div>
        <label for="prenom">Prénom*</label>
        <input type="text" name="FirstName" data-name="Prenom" data-required placeholder="Prénom">
        </div>
        <label for="name">Nom*</label>
        <input type="text" name="LastName" data-name="Nom" data-required placeholder="Nom">
        </div>
        <div>
        <label for="Address">Adresse*</label>
        <input type="text" name="Address" data-name="Addresse" data-required placeholder="Adresse">
        </div>
       <div>
        <label for="ville">Ville*</label>
        <input type="text" name="City" data-name="Ville" data-required placeholder="Ville">
        </div>
        <div>
        <label for="postal_code">Code Postal*</label>
        <input type="text" name="Postal_Code" data-name="Code postal" data-required data-number placeholder="Code Postal">
        </div>
        <div>
        <label>Téléphone*</label>
        <input type="text" name="Phone" data-name="Telephone" data-number data-required placeholder="Téléphone">
        </div>
        <div>
        <label for="email">Email*</label>
        <input type="email" name="Email" data-name="Email" data-required placeholder="Email">
        </div>
        <div>
        <label for="password">Mot de passe*</label>
        <input type="password" name="Password" data-name="Mot de passe" data-required data-length="8" placeholder="Mot de passe">
        </div>
        <div class="button">
        <button type="submit" id="button">Valider</button>
        </div>
</form>
<p class="register"><a href="{{ path('login') }}">Vous avez déjà un compte? Cliquez ici!</a></p>
</div>
<script type="text/javascript" src="{{ asset("class/FormValidator.class.js", "js")}}"></script>
{% endblock %}